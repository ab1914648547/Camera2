<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_quality_small"
            android:layout_width="@dimen/tv_max_width"
            android:layout_height="@dimen/tv_height"
            android:layout_gravity="center"
            android:background="@drawable/scale_border"
            android:gravity="center"
            android:text="@string/quality_small"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/quality_textSize" />

        <TextView
            android:id="@+id/tv_quality_large"
            android:layout_width="@dimen/tv_max_width"
            android:layout_height="@dimen/tv_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/popwin_margin_eight"
            android:background="@drawable/scale_border"
            android:gravity="center"
            android:text="@string/quality_large"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/quality_textSize" />
    </LinearLayout>
</RelativeLayout>